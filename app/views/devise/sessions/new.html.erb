<div class="ui middle aligned center aligned grid" style="margin: auto">
  <div class="column">
    <h2 class="ui center aligned medium icon header">
      <i class="circular teal comment icon"></i>
      <Login></Login>
    </h2>
<%= form_for(resource, as: resource_name,class: 'ui large form', url: session_path(resource_name)) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
  <div class="ui left icon input" style="padding: 10px;">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>
        </div>
        <div class="field">
  <div class="ui left icon input" style="padding: 10px;">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>
        </div>

  <% if devise_mapping.rememberable? %>
    <div class="ui input" style="padding-right: 10px;">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="ui input">
    <%= f.submit "Log in", class:'ui fluid large teal submit button' %>
  </div>
<% end %>
    </div>

    <div class="ui message">
<%= render "devise/shared/links" %></div>
    </div>
</div>