<h2 class="ui center aligned medium icon header">
  <i class="circular teal comment icon"></i>
  Welcome to the Messaging App!
</h2>
<% if user_signed_in? %>
<div class="ui two column grid">
<div class="twelve wide column">
  <div class="ui fluid raised card chatbox">
    <div class=" content">
<div class="ui small feed">
  <div class="event">
    <div class="label">
      <img src="/images/avatar/small/jenny.jpg">
    </div>
    <div class="content">
      <div class="date">
        3 days ago
      </div>
      <div class="summary">
        <em>Christian Rocha</em>: Test message
      </div>
    </div>
  </div>
</div>
</div>
    <div class="extra content">
      <form class="ui reply form">
        <div class="field">
          <div class="ui fluid icon input">
            <input type="text" placeholder="Enter a message...">
            <i class="icon edit"></i>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<div class="four wide column">
  <div class="ui fluid raised card chatbox">
    <div class="active content">
  <div class="ui inverted vertical menu">
  <a class="active item">
    Home
  </a>
  <a class="item">
    Messages
  </a>
  <a class="item">
    Friends
  </a>
</div>
</div>
</div>
</div>
</div>
<% end %>